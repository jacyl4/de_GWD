    green "=============================="
    read vpsdomain

v2path=$(awk "/path/" /etc/vtrui/config.json | awk 'NR==1{print}' | cut -d '"' -f 4)

rm -rf /var/www/ssl

makessl

if [[ -d "/var/www/html/nextcloud" ]]; then
  nginxnextcloudconf
else
  nginxwebconf
fi

systemctl restart nginx

/usr/local/bin/updateGWD

