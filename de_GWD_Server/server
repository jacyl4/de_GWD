    green "================================"
    green " Input the new domain ( no www )"
    green "================================"
    read vpsdomain

v2path=$(jq -r '.inbounds[0].streamSettings.wsSettings.path' /etc/vtrui/config.json)

rm -rf /var/www/ssl

