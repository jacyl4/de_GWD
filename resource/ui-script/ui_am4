#!/bin/bash
blue()   { echo -e "\033[34m\033[01m $1 \033[0m"; }
yellow() { echo -e "\033[33m\033[01m $1 \033[0m"; }
green()  { echo -e "\033[32m\033[01m $1 \033[0m"; }
red()    { echo -e "\033[31m\033[01m $1 \033[0m"; }
statusInstalled=$(green "[ installed ]")

/opt/de_GWD/tcpTime

wget --no-check-certificate -c -O /tmp/geosite.dat https://github.com/Loyalsoldier/v2ray-rules-dat/raw/release/geosite.dat
if [[ $(ls -l /tmp/geosite.dat | awk '{print$5}') -gt 240000 ]]; then
mv -f /tmp/geosite.dat /opt/de_GWD/v2dns/geosite.dat
fi

wget --no-check-certificate -c -O /tmp/geoip.dat https://github.com/Loyalsoldier/v2ray-rules-dat/raw/release/geoip.dat
if [[ $(ls -l /tmp/geoip.dat | awk '{print$5}') -gt 240000 ]]; then
cp -f /tmp/geoip.dat /opt/de_GWD/v2dns/geoip.dat
cp -f /tmp/geoip.dat /opt/de_GWD/vtrui/geoip.dat
rm -rf /tmp/geoip.dat
fi

wget --no-check-certificate -c -O /tmp/IPchnroute https://cdn.jsdelivr.net/gh/17mon/china_ip_list@master/china_ip_list.txt
if [[ $(ls -l /tmp/IPchnroute | awk '{print$5}') -gt 80000 ]]; then
mv -f /tmp/IPchnroute /opt/de_GWD/IPchnroute
cp -f /opt/de_GWD/IPchnroute /opt/de_GWD/chnrouteSET
sed -i 's/^/add chnroute &/g' /opt/de_GWD/chnrouteSET

ipset -F chnroute >/dev/null 2>&1
cat /opt/de_GWD/IPchnroute | xargs -n 20 | while read line
do
	for IPchnroute in $line
	do
	  ipset add chnroute $IPchnroute &
	done
	wait
done
fi

echo "$statusInstalled IP & Domain rules"